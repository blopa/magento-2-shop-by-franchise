<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Magento/Widget/etc/widget.xsd">
    <widget id="magiccart_franchise" class="Magiccart\Shopfranchise\Block\Widget\Franchise">
        <label translate="true">Magiccart Franchise Logo Widget</label>
        <description>Show Franchises Logo</description>
        <parameters>
            <parameter name="template" xsi:type="select" required="true" visible="true">
                <label translate="true">Template</label>
                <options>
                    <option name="default" value="franchise.phtml" selected="true">
                        <label translate="true">Default</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>
    <widget id="magiccart_shopfranchise" class="Magiccart\Shopfranchise\Block\Widget\Shopfranchise">
        <label translate="true">Magiccart Shop Franchise Widget</label>
        <description>Show Franchises Logo and Products</description>
        <parameters>
            <parameter name="template" xsi:type="select" required="true" visible="true">
                <label translate="true">Template</label>
                <options>
                    <option name="default" value="shopfranchise.phtml" selected="true">
                        <label translate="true">Default</label>
                    </option>
                </options>
            </parameter>
        </parameters>
    </widget>
</widgets>
